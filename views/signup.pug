extends base

block content
    .container(style='margin-top: 20px;')
        .row
            .col-lg-4
            .col-lg-4
                .card.text-center
                    h5.card-header
                        | Registration Form
                    .card-body
                        form
                            label(for='firstName') Your first name:
                            input#firstName.form-control(type='text' required='')
                            br
                            label(for='firstName') Your last name:
                            input#lastName.form-control(type='text' required='')
                            br
                            label(for='email') Email address:
                            input#email.form-control(type='email' placeholder='you@example.com' required='')
                            br
                            label(for='password') Your password:
                            input#password.form-control(type='password' minlength='8' required='')
                            br
                            label(for='passwordConfirm') Confirm password:
                            input#passwordConfirm.form-control(type='password' minlength='8' required='')
                            br
                            button.btn.btn-block.btn-lg.btn-secondary.mb-3.btn--signup(type='submit')
                                | Sign up
                        span
                            | Already have an account? 
                            a(href='/login') Log in here
                    .card-footer.text-muted
                        | soMuchFun.com
block scriptFile
    script(src="/js/register.js")